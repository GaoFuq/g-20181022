<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/temp_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Recharge"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/tb_13"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:text="充值"
                android:textSize="15sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="我的余额(元)"
                    android:textColor="#666666"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/epurse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="2326"
                    android:textColor="#f70052"
                    android:textSize="60px"/>
            </LinearLayout>

            <ImageView
                android:layout_width="272px"
                android:layout_height="272px"
                android:src="@mipmap/tb_14"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Withdrawals"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/tb_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp"
                android:layout_marginTop="10dp"
                android:text="提现"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/aa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="钱包流水"
            android:textSize="17sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="#e7e7e7"/>
    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/pay_money_history"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <!--</android.support.v7.widget.RecyclerView>-->
    <com.code.clkj.menggong.base.TempRecyclerView
        android:id="@+id/pay_money_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.code.clkj.menggong.base.TempRecyclerView>


</LinearLayout>