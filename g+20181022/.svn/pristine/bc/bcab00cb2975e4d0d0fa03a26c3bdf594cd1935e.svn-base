<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/streamingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="15px"
            android:contentDescription="@string/cd_tv_streaming_state_hint"
            android:text="@string/string_state_ready"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <Button
            android:id="@+id/camera_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15px"
            android:background="@mipmap/carmer_qiehuan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/camera_switch_editex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center|right"
                android:layout_margin="15px"
                android:src="@mipmap/edite"
                />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/streamingStatus_room_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="15px"
        android:contentDescription="@string/cd_tv_streaming_state_hint"
        android:text="@string/string_state_ready"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/streamingStatus_room_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="15px"
        android:layout_marginTop="12px"
        android:contentDescription="@string/cd_tv_streaming_state_hint"
        android:text="@string/string_state_ready"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/streamingStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/cd_tv_streaming_state_hint"
        android:text="@string/string_state_ready"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00ff00"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/stream_status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cd_tv_stream_status"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"/>

</LinearLayout>
