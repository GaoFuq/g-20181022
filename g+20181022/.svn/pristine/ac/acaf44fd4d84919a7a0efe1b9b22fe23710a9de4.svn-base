<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--编辑收货地址的界面-->
    <include layout="@layout/temp_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="收货人"
            android:gravity="center"
            android:textColor="#A9A9A9"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
        />
        <EditText
            android:id="@+id/consignee_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="输入长度2-10字内"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="联系电话"
            android:textColor="#A9A9A9"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="正确填写手机号码"
            android:inputType="number"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="所在区域"
            android:gravity="center"
            android:textColor="#A9A9A9"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:textColor="#a0a0a0"
            android:textSize="14sp"
            android:text="重庆市"
            android:paddingRight="5dp"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/body_address_city_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </TextView>
        <TextView
            android:textColor="#a0a0a0"
            android:textSize="14sp"
            android:text="请选择区"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:id="@+id/body_address_area_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="详细地址"
            android:gravity="center"
            android:textColor="#A9A9A9"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <EditText
            android:id="@+id/address_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_weight="3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/select_checkbox"
            android:button="@drawable/select_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:textColor="#383838"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设置为默认收货地址"
            android:gravity="center"
            android:checked="false"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/baocun_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="保存"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/cricler_btn"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />
</LinearLayout>