<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.code.clkj.menggong.activity.comUserLogin.LoginActivity">
    <!--登录界面-->
    <include layout="@layout/temp_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#d2d2d2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mHeadIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:src="@mipmap/yhu_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="登录"
            android:textSize="20sp"/>
    </LinearLayout>

    <!--用户名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/smartphone"/>

        <EditText
            android:id="@+id/mUserID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:lineSpacingExtra="3dp"
            android:textColorHint="#a0a0a0"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"/>
    </LinearLayout>
    <!--划线-->
    <include layout="@layout/segmenting_line_02"/>

    <!--密码-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic"/>

        <EditText
            android:id="@+id/mPassWord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="#a0a0a0"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            />
    </LinearLayout>

    <!--划线-->
    <include layout="@layout/segmenting_line_02"/>



    <TextView
        android:id="@+id/mLoginButton"
        android:layout_width="330dp"
        android:layout_height="80px"
        android:layout_marginTop="20dp"
        android:background="@drawable/cricler_btn"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/mForgetPassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:text="忘记密码？"
            android:textColor="#393939"
            android:textSize="14sp"/>
    </RelativeLayout>

</LinearLayout>
