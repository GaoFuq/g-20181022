<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_gift_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

<!--    android:padding="5dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ly_grider"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:scaleType="fitXY"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@drawable/temp_image_load_fail"
                fresco:failureImageScaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/face_img"
                fresco:placeholderImage="@drawable/temp_image_default"
                />

            <TextView
                android:singleLine="true"
                android:id="@+id/face_name"
                android:text="888"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5px"
                android:textSize="13sp" />
            <TextView
                android:singleLine="true"
                android:textSize="12sp"
                android:text="90金豆"
                android:textColor="#FF015B"
                android:id="@+id/face_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/change_imagview"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <!--<TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    -->

</LinearLayout>