<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_data_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    android:orientation="vertical"
    tools:context="com.code.clkj.menggong.activity.comPersonalCenter.PersonalDataActivity">
  <!--个人资料界面-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <!--第一行 头像-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="20sp"
            android:textColor="#A9A9A9"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
         <ImageView
             android:id="@+id/mHeadMore"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"
             android:src="@mipmap/grzx_4"
             android:background="#ccc"
             android:layout_centerVertical="true"
             />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/mHeadMore"
            android:layout_marginRight="15dp"
            android:src="@mipmap/grzl_1"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <!--第二行  昵称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="20sp"
            android:textColor="#A9A9A9"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="20dp"
          android:textSize="20sp"
          android:textColor="#000"
          android:text="带刺的玫瑰"
          android:layout_centerVertical="true"
          />
    </RelativeLayout>
    <!--画线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#e2e2e2"
        />
    <!--第三行  签名-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textSize="20sp"
            android:textColor="#A9A9A9"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="身体和心灵有一个必须在路上"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#e2e2e2"
        />
    <!--第四行  角色-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="角色"
            android:textSize="20sp"
            android:textColor="#A9A9A9"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/mCharacterMore"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/grzx_4"
            android:background="#ccc"
            android:layout_centerVertical="true"
            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:text="0.5"
           android:layout_toLeftOf="@id/mCharacterMore"
           android:layout_marginRight="10dp"
           android:textSize="20sp"
           />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#e2e2e2"
        />

    <!--第五行  生日-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:textSize="20sp"
            android:textColor="#A9A9A9"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/mBirthdayMore"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/grzx_4"
            android:background="#ccc"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1987-03-04"
            android:layout_toLeftOf="@id/mBirthdayMore"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#e2e2e2"
        />

    <!--第六行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textSize="20sp"
            android:textColor="#A9A9A9"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/mAreaMore"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/grzx_4"
            android:background="#ccc"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="重庆市 大渡口区"
            android:layout_toLeftOf="@id/mAreaMore"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="25sp"
        android:gravity="center"
        android:background="#FFF60051"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

</LinearLayout>
