<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#40000000">
    <LinearLayout
        android:background="@drawable/shape_login_notice_bj"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pop_notice_image"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <TextView
            android:id="@+id/pop_notice_text"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="149px"
            android:layout_marginTop="62px"
            android:textColor="#2F2F2F"
            android:text="是否兑换成1000余额"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >
            <Button
                android:id="@+id/pop_notice_btn_cancel"
                android:background="@drawable/shape_notice_cancel"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="取消"/>
            <Button
                android:id="@+id/pop_notice_btn_ok"
                android:background="@drawable/shape_notice_ok"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="确 定"/>
        </LinearLayout>


    </LinearLayout>



</com.rey.material.widget.RelativeLayout>
