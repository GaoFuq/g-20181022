    <!--附近的页面-->
    <!--用来展示附近人、消息、朋友圈、朋友界面-->
    <!--f70052 262626-->
    <!--底部-->

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.code.clkj.menggong.activity.comNear.NearHomeActivity"
        android:id="@+id/mDrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/near_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_home_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10px"
                android:paddingTop="10px">

                <FrameLayout
                    android:id="@+id/mNear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/act_near_bar_1_iv"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:src="@mipmap/compass_1"/>

                        <TextView
                            android:id="@+id/act_near_bar_1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10px"
                            android:text="附近"
                            android:textColor="#f70052"
                            android:textSize="11sp"/>

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/mInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/act_near_bar_2_iv"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:src="@mipmap/bubble"/>

                        <TextView
                            android:id="@+id/act_near_bar_2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10px"
                            android:text="消息"
                            android:textColor="#262626"
                            android:textSize="11sp"/>

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/mFriendsCircle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/act_near_bar_3_iv"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:src="@mipmap/coz"/>

                        <TextView
                            android:id="@+id/act_near_bar_3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10px"
                            android:text="朋友圈"
                            android:textColor="#262626"
                            android:textSize="11sp"/>

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/mFriends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/act_near_bar_4_iv"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:src="@mipmap/coz_2"/>

                        <TextView
                            android:id="@+id/act_near_bar_4_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10px"
                            android:text="好友"
                            android:textColor="#262626"
                            android:textSize="11sp"/>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/mNearViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/near_bottom_layout"
                android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>

        </RelativeLayout>

        <include layout="@layout/filter_layout"/>

    </android.support.v4.widget.DrawerLayout>


