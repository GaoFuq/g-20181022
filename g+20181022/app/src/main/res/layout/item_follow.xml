<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mHeadimg"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center"
            fresco:placeholderImage="@mipmap/zbo_5"
            fresco:roundAsCircle="true"
            fresco:failureImage="@mipmap/zbo_5"
            fresco:actualImageScaleType="fitXY"
            fresco:failureImageScaleType="fitXY"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40px"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/museNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#404040" />
                <ImageView
                    android:id="@+id/state_img"
                    android:visibility="gone"
                    android:layout_marginStart="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/whzd_1" />
            </LinearLayout>

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#a1a1a1" />

        </LinearLayout>


        <ImageView
            android:id="@+id/Abolish_concern"
            android:src="@mipmap/whzd_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20px" />


    </LinearLayout>

    <View
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
</LinearLayout>