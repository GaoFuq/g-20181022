<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_linearlayout_babyvideo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/pop_take_pic_layout"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pick_photos_take"/>
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="#040404"
                android:textSize="17sp"
                android:background="#fff"
                android:text="拍照上传"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/pop_choose_pic_layout"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pick_photos_choose"/>

            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="#040404"
                android:textSize="17sp"
                android:background="#fff"
                android:text="从相册中选择"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/pop_quit_layout"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pick_photos_quit"/>
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="#040404"
                android:textSize="17sp"
                android:background="#fff"
                android:text="取消"/>
        </LinearLayout>

    </LinearLayout>



</FrameLayout>
