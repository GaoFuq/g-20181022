<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
    >
    <!--首頁直播間的item-->
    <ImageView
        android:id="@+id/mRoomIcon"
        android:layout_width="250px"
        android:layout_height="230px"
        android:scaleType="centerCrop"
        android:src="@mipmap/zye_4"
        />
    <ImageView
        android:id="@+id/img_line"
        android:visibility="gone"
        android:layout_alignRight="@id/mRoomIcon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/mRoomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mRoomIcon"
        android:layout_margin="5dp"
        android:text="做个安静的美男子"
        android:textColor="#ffffff"
        android:textSize="12sp"
        />

    <TextView
        android:background="@drawable/white2black"
        android:alpha="0.6"
        android:id="@+id/mUserCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mRoomIcon"
        android:layout_alignRight="@id/mRoomIcon"
        android:gravity="right"
        android:text="233"
        android:paddingRight="5dp"
        android:textColor="#ffffff"
        android:textSize="14sp"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/mRoomIcon"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/mUserCount"
        android:background="#80ffffff"
        />
</RelativeLayout>
