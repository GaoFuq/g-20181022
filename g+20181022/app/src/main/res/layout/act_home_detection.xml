<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/temp_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:textColor="#383838"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/phone_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textColor="#afafaf"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/segmenting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp">


        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="验证码:"
            android:textColor="#383838"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/Code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="#afafaf"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mSendVerificationCode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shap_btn_gray"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#a0a0a0"
            android:textSize="16sp" />


    </LinearLayout>

    <include layout="@layout/segmenting_line" />

    <LinearLayout
        android:id="@+id/check_name_root"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="检测点:"
            android:textColor="#383838"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/check_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#afafaf"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/down_arrow" />


    </LinearLayout>

    <include layout="@layout/segmenting_line" />

    <LinearLayout
        android:id="@+id/yy_time"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="预约时间:"
            android:textColor="#383838"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#afafaf"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/right_arrow" />
    </LinearLayout>


    <include layout="@layout/segmenting_line" />
    <!--android:background="#F3FF0741"-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shap_btn"
        android:gravity="center"
        android:text="申请预约"
        android:textColor="#ffff"
        android:textSize="40px" />


</LinearLayout>