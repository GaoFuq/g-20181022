<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/act_firm_order_style"
        style="@style/v_item_style"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认订单信息"
            android:textColor="#848484"
            android:textSize="14sp"/>
    </LinearLayout>

    <include layout="@layout/line_1px"/>

    <LinearLayout
        style="@style/v_item_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_good_image"
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@mipmap/zbsd_3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#393939"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/store_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#f70052"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/store_goods_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/store_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text=""
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text=""
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_1px"/>

    <LinearLayout
        android:id="@+id/act_firm_order_bz"
        style="@style/v_item_style"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="#b3b3b3"
            android:textSize="14sp"/>

        <EditText

            android:id="@+id/act_firm_order_bz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19px"
            android:layout_weight="1"
            android:background="#0000"
            android:hint="请填写需要特别备注的"
            android:textColorHint="#b3b3b3"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

    </LinearLayout>

    <include layout="@layout/line_20px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:paddingRight="50px"
        android:paddingTop="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计："/>

        <TextView
            android:id="@+id/xiaoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="#f70052"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>
